<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listItemContainer">
    <ImageView
        android:id="@+id/avatarListItem"
        android:layout_width="@dimen/row_height"
        android:layout_height="@dimen/row_height"
        android:layout_marginStart="@dimen/dp_16"
        android:contentDescription="@string/icon_in_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/list_icons" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarListItem"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Issue Name" />


</androidx.constraintlayout.widget.ConstraintLayout>